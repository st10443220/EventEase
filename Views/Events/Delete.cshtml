@model EventEase.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: var(--navy); border-bottom: 2px solid var(--peach); padding-bottom: 0.5rem;">
    @ViewData["Title"]
</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Event Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class = "col-sm-2">
            Start Event Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartEventDate)
        </dd>
        <dt class = "col-sm-2">
            End Event Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinishEventDate)
        </dd>
        <dt class = "col-sm-2">
            Event Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete";
}

<h1 style="color: var(--navy); border-bottom: 2px solid var(--peach); padding-bottom: 0.5rem;">
    @ViewData["Title"]
</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Venue Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            Venue Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueLocation)
        </dd>
        <dt class = "col-sm-2">
            Venue Capacity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueCapacity)
        </dd>
        <dt class = "col-sm-2">
            Venue Image Url
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.VenueImageUrl)" />
        </dd>
    </dl>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

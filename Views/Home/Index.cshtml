@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center">
    <h1 class="display-4 mb-4" style="color: var(--coral);">Welcome to EventEase</h1>
    <p class="lead" style="color: var(--navy); font-size: 1.25rem;">
        Your seamless solution for event management and venue booking
    </p>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="feature-card">
                <h3 style="color: var(--sage);">Venues</h3>
                <p>Explore our premium venues</p>
                <a asp-controller="Venues" asp-action="Index" class="btn btn-primary">
                    Browse Venues
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <h3 style="color: var(--sage);">Events</h3>
                <p>Discover upcoming events</p>
                <a asp-controller="Events" asp-action="Index" class="btn btn-primary">
                    View Events
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <h3 style="color: var(--sage);">Bookings</h3>
                <p>Manage your reservations</p>
                <a asp-controller="Bookings" asp-action="Index" class="btn btn-primary">
                    My Bookings
                </a>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Booking";
}

<h1 style="color: var(--navy); border-bottom: 2px solid var(--peach); padding-bottom: 0.5rem;">
    @ViewData["Title"]
</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover shadow">
    <thead>
        <tr>
            <th>
                Event Name
            </th>
            <th>
                Venue Name
            </th>
            <th>
                Start Booking Date
            </th>
            <th>
                End Booking Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue.VenueName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartBookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndBookingDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

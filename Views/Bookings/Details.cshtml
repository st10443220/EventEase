@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<h1 style="color: var(--navy); border-bottom: 2px solid var(--peach); padding-bottom: 0.5rem;">
    @ViewData["Title"]
</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            Venue Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueName)
        </dd>
        <dt class = "col-sm-2">
            Start Booking Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartBookingDate)
        </dd>
        <dt class = "col-sm-2">
            End Booking Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndBookingDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
